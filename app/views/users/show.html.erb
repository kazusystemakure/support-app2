<%= render "shared/header" %>

<div class="profile-card">
  <div class="profile-card__inner">
    <div class="profile-thumb">
      <%= image_tag @user.image %>
    </div>
    <div class="profile-content">
      <span class="profile-name"><%= @user.name %></span>
      <span class="profile-job"><%= @user.skill %></span>
      <span class="profile-intro"><%= @user.introduction%></span>
    </div>
    <div class="sns-content">
      <%= link_to image_tag('insta.png' , size: '50x50'), "/", class: "sns-btn" %>
      <%= link_to image_tag('facebook.png' , size: '50x50'), "/", class: "sns-btn" %>
    </div>
    <div class=edit-box>
      <% if user_signed_in? && current_user.id == @user.id %>
        <%= link_to '会員情報 編集', edit_user_path, class: "edit-btn" %>
        <%= link_to 'SNS情報 編集', new_teacher_path, class: "edit-btn" %>
      <% end %>
    </div>
  </div>
  <div class='item-contents'>
    <h2 class='title-participation-list'>参加レッスン一覧</h2>
    <p>購入後は、レッスン詳細画面にZOOM IDとパスワードが表示されます。</p>
    <ul class='item-lists'>
        <% @orders.each do |order| %>
          <li class='list'>
            <%= link_to lesson_path(order.lesson_id) do %>
              <div class='item-img-content'>
                <%= image_tag order.lesson.image, class: "item-img" %>
                  <% if order.lesson.lesson_date < Date.today %>
                    <div class='sold-out'>
                      <span>END!!</span>
                    </div>
                  <% end %>
              </div>
              <div class='item-info'>
                <h3 class='item-name'>
                  <%= order.lesson.name %>
                </h3>
                <div class='item-price'>
                  <span><%= order.lesson.price %>円<br>(税込み)</span>
                  <div class='star-btn'>
                    <%= image_tag "star.png", class:"star-icon" %>
                    <span class='star-count'>0</span>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
    </ul>
  </div>


  <div class='item-contents'>
    <h2 class='title-held-list'><%= @user.name %>さん 開催レッスン一覧</h2>
    <ul class='item-lists'>
      <% @lessons.each do |lesson| %>
        <li class='list'>
          <%= link_to lesson_path(lesson.id) do %>
            <div class='item-img-content'>
              <%= image_tag lesson.image, class: "item-img" %>
                <% if lesson.lesson_date < Date.today %>
                  <div class='sold-out'>
                    <span>END!!</span>
                  </div>
                <% end %>
            </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= lesson.name %>
              </h3>
              <div class='item-price'>
                <span><%= lesson.price %>円<br>(税込み)</span>
                <div class='star-btn'>
                  <%= image_tag "star.png", class:"star-icon" %>
                  <span class='star-count'>0</span>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= render "shared/footer" %>